<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.takvim.fxcalendar.Controller.RegistrationController">
    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>

    <Label text="Kayıt Ol" style="-fx-font-size: 18px;"/>

    <Label text="Ad"/>
    <TextField fx:id="firstNameField"/>

    <Label text="Soyad"/>
    <TextField fx:id="lastNameField"/>

    <Label text="Kullanıcı Adı"/>
    <TextField fx:id="usernameField"/>

    <Label text="Parola"/>
    <PasswordField fx:id="passwordField"/>

    <Label text="TC Kimlik No"/>
    <TextField fx:id="tcNoField"/>

    <Label text="Telefon"/>
    <TextField fx:id="phoneField"/>

    <Label text="Email"/>
    <TextField fx:id="emailField"/>

    <Label text="Adres"/>
    <TextField fx:id="addressField"/>

    <Label text="Kullanıcı Tipi"/>
    <ComboBox fx:id="userTypeComboBox"/>

    <Button text="Kayıt Ol" onAction="#registerButtonClicked"/>

    <Label fx:id="statusLabel" style="-fx-text-fill: red;"/>

    <Button text="Geri Dön" onAction="#goBackButtonClicked" style="-fx-text-fill: blue;" fx:id="goBackButton"/>

</VBox>